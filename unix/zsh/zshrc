export PATH=~/.bin:/.dotnet/tools/:~/.composer/vendor/bin:/Applications/MAMP/Library/bin:~/.npm-global/bin:/usr/local/share/dotnet/x64:$PATH

# Variables
export EDITOR=vim

#.NET
alias nuget="mono /usr/local/bin/nuget.exe"

# Git
alias gb="git branch --show-current"
alias grs="git remote show"
alias ga="git add"
alias gs="git status"
alias gm="git commit -m"
alias gp="git push" 

# Node/NPM
alias nr="npm run"

# Go
export GOPATH=~/.go
alias gr="go run *.go"

# Docker
alias d='docker'
alias dc='docker container'
alias di='docker image'
alias dp='docker rmi -f $(docker images -a -q)'
alias prune='docker system prune'

# Misc
alias ll='ls -l'
alias weather="osascript -e 'display notification \"National Weather Service\" with title \"Fetching Radar\"'; mpv --loop-file=inf \"https://radar.weather.gov/ridge/lite/KMTX_loop.gif\""

case "$(uname -s)" in
    Darwin*)    alias lsblk="diskutil list";;
esac

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

