# Variables
export EDITOR=vim

# PHP/Composer
export PATH=~/.dotnet/tools/:~/.composer/vendor/bin:/Applications/MAMP/Library/bin:$PATH

#.NET
alias nuget="mono /usr/local/bin/nuget.exe"

# Git
alias gb="git branch --show-current"
alias gr="git remote show"
alias ga="git add"
alias gs="git status"
alias gm="git commit -m"
alias gp="git push" 

# Misc
alias weather="osascript -e 'display notification \"Salt Lake City (KMTX)\" with title \"Fetching Radar\"'; mpv --loop-file=inf \"https://radar.weather.gov/ridge/lite/KMTX_loop.gif\""

case "$(uname -s)" in
    Darwin*)    alias lsblk="diskutil list";;
esac